<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"> <!-- version 4.0 for Java EE 8 / Tomcat 9 -->

    <display-name>PahanaBillingSystem</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlets වල @WebServlet annotation එක භාවිතා කරන නිසා, මෙතන declare කිරීම අත්‍යවශ්‍ය නෑ -->
    <!-- නමුත් අවශ්‍ය නම් මේ විදියට add කරන්න පුළුවන්:
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>lk.pahana.billing.controller.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>lk.pahana.billing.controller.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customers</url-pattern>
    </servlet-mapping>
    -->

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- *** Custom Error Pages Configuration *** -->
    <!-- HTTP 404 Not Found Error -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>

    <!-- HTTP 500 Internal Server Error -->
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>

    <!-- General Java Exceptions -->
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

</web-app>